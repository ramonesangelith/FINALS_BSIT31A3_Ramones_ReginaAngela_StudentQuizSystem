@model StudentQuizSystem.Data.Entities.Quiz
<h2>@Model.Title</h2>
<form asp-action="Submit" method="post">
<input type="hidden" name="quizId" value="@Model.Id" />
 @for (int i = 0; i < Model.Questions.Count; i++)
{
var q = Model.Questions.ElementAt(i);
<div>
<p>@(i+1). @q.Text</p>
 @foreach (var opt in q.Options)
 {
<div>
<input type="radio" name="selectedOptionIds"
value="@opt.Id" /> @opt.Text
</div>
 }
</div>
 }
<button type="submit">Submit</button>
</form>