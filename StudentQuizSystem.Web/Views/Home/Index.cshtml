@model StudentQuizSystem.Services.DTOs.Home.HomeViewModel
@{
    ViewData["Title"] = "Available Quizzes";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Quiz System</h1>
    <p>Select a quiz to start.</p>
</div>

<div class="row">
    @foreach (var quiz in Model.Quizzes)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@quiz.Title</h5>
                    <p class="card-text">Subject: @quiz.Subject</p>

                    @if (User.IsInRole("Student"))
                    {
                        <a asp-controller="Student" asp-action="TakeQuiz" asp-route-id="@quiz.Id" class="btn btn-primary">Take Quiz</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-controller="Admin" asp-action="DeleteQuiz" asp-route-id="@quiz.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this quiz?')">Delete</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }
</div>