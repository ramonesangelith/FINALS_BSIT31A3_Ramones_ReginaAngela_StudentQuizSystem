@model IEnumerable<StudentQuizSystem.Services.DTOs.Home.LeaderboardViewModel>
@{
    ViewData["Title"] = "Leaderboard";
}

<h1>Leaderboard</h1>

<form asp-action="Leaderboard" method="get">
    <div class="input-group mb-3">
        <input type="text" name="subject" class="form-control" placeholder="Filter by subject..." value="@ViewBag.Subject">
        <button class="btn btn-outline-secondary" type="submit">Filter</button>
        <a asp-action="Leaderboard" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Student</th>
            <th>Subject</th>
            <th>Highest Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.StudentName</td>
                <td>@entry.Subject</td>
                <td>@entry.HighestScore</td>
            </tr>
        }
    </tbody>
</table>